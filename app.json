{
  "expo": {
    "name": "vocabin-mobile",
    "slug": "vocabin-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "AI搭載の英語学習アプリ。翻訳、単語帳、チャット機能で効率的に英語を学習できます。",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.takumi.vocabin",
      "infoPlist": {
        "NSCameraUsageDescription": "このアプリでは翻訳のためにカメラを使用します。",
        "NSPhotoLibraryUsageDescription": "画像を選択するためにフォトライブラリへアクセスします。",
        "NSMicrophoneUsageDescription": "音声入力のためにマイクを使用します。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.takumi.vocabin",
      "versionCode": 1,
      "targetSdkVersion": 34,
      "compileSdkVersion": 34,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "@react-native-google-signin/google-signin",
      "expo-av"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "de364276-098c-4e49-9ec7-5db36ed895d5"
      }
    }
  }
}
