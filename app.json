{
  "expo": {
    "name": "Vocabin",
    "slug": "vocabin-mobile",
    "version": "1.0.28",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",

    "description": "開発者が毎日使う英語学習アプリ。辞書機能、学習機能、学習進捗機能で効率的に英語力を向上させます。",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.takumi.vocabin",
      "infoPlist": {
        "NSCameraUsageDescription": "このアプリでは翻訳のためにカメラを使用します。",
        "NSPhotoLibraryUsageDescription": "画像を選択するためにフォトライブラリへアクセスします。",
        "NSMicrophoneUsageDescription": "音声入力のためにマイクを使用します。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.takumi.vocabin",
      "versionCode": 31,
      "targetSdkVersion": 34,
      "compileSdkVersion": 35,
      "softwareKeyboardLayoutMode": "resize",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "blockedPermissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "androidStatusBar": {
      "backgroundColor": "#ffffff",
      "translucent": false,
      "barStyle": "dark-content",
      "hidden": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "@react-native-google-signin/google-signin",
      "expo-av",
      [
        "react-native-google-mobile-ads",
        {
          "android_app_id": "ca-app-pub-9940045330193360~7390502834",
          "ios_app_id": "ca-app-pub-9940045330193360~7390502834"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "newArchEnabled": false,
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "de364276-098c-4e49-9ec7-5db36ed895d5"
      }
    },
    "owner": "manabe1117"
  }
}
